        <label for="nickname">Usu치rio:</label>
        <input type="text" name="nickname" id="nickname" placeholder="Usu치rio" required>
      </div>
      <div class="input-group">
        <label for="senha">Senha:</label>
        <input type="password" name="senha" id="senha" placeholder="Senha" required>
      </div>
      <button type="submit" class="submit-button">Cadastrar</button>
    </form>
    <a href="/usuarios" class="back-link">Ver usu치rios cadastrados</a>
    <a href="/menu" class="back-link">Voltar ao Menu</a>
